fn main() {
    core::assert(sizeof(i32) == 4);
    core::assert(sizeof(i64) == 8);
    core::assert(sizeof(i8) == 1);

    core::assert(sizeof(u32) == 4);
    core::assert(sizeof(u64) == 8);
    core::assert(sizeof(u8) == 1);

    core::assert(sizeof(f32) == 4);
    core::assert(sizeof(f64) == 8);

    core::assert(sizeof(bool) == 1);

    core::assert(sizeof(*u8) == sizeof(*mut u8));
    core::assert(sizeof(*u8) == sizeof(usize));
}
