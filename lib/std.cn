with std::io;
with c;

pub fn exit(code: i32) never {
    c::exit(code as c::int);
}

pub fn panic(message: []u8) never {
    io::eprintln(message);
    return exit(1);
}

pub fn assert(cond: bool) {
    if !cond { return panic("Assertion failed"); }
}

pub fn dbg_assert(cond: bool) {
    if core::env::DEBUG { assert(cond); }
}
