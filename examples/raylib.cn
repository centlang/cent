with std::ffi;
with c;

type Color = u32;

const RAYWHITE: Color = 0xfff5f5f5;
const LIGHTGRAY: Color = 0xffc8c8c8;

#(extern) fn InitWindow(
    width: c::int, height: c::int, title: *c::char
);

#(extern) fn CloseWindow();
#(extern) fn WindowShouldClose() bool;

#(extern) fn BeginDrawing();
#(extern) fn EndDrawing();

#(extern) fn ClearBackground(color: Color);

#(extern) fn DrawText(
    text: *c::char, pos_x: c::int, pos_y: c::int,
    font_size: c::int, color: Color
);

fn main() {
    InitWindow(800, 600, ffi::as_cstr("raylib example\0"));

    while !WindowShouldClose() {
        BeginDrawing();

        ClearBackground(RAYWHITE);
        DrawText(ffi::as_cstr("Hello from Cent!\0"), 250, 250, 36, LIGHTGRAY);

        EndDrawing();
    }
}
