with c;

fn main() {
    mut array = [5]i32{1, 2, 3, 4, 5};
    mut slice: []mut i32 = array;

    slice[0] = 42;
    c::printf(c::to_cstr("slice[0] = %d\n"), slice[0]);
    c::printf(c::to_cstr("slice.len = %zu\n"), slice.len);

    slice = slice[1:3];
    c::printf(c::to_cstr("slice[0] = %d\n"), slice[0]);
    c::printf(c::to_cstr("slice.len = %zu\n"), slice.len);
}
