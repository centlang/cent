with std::ffi;
with c;

fn main() {
    mut array = [5]i32{1, 2, 3, 4, 5};
    mut slice: []mut i32 = array;

    slice[0] = 42;
    c::printf(ffi::as_cstr("slice[0] = %d\n\0"), slice[0]);
    c::printf(ffi::as_cstr("slice.len = %zu\n\0"), slice.len);

    slice = slice[1:3];
    c::printf(ffi::as_cstr("slice[0] = %d\n\0"), slice[0]);
    c::printf(ffi::as_cstr("slice.len = %zu\n\0"), slice.len);
}
