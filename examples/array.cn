with c;
with std::ffi;

fn main() {
    mut squares: [10]i32 = undefined;

    for i in 1..=10 {
        squares[i as usize - 1] = i * i;
    }

    c::puts(ffi::as_cstr("Squares:\0"));

    for x in squares {
        c::printf(ffi::as_cstr("  %u\n\0"), x);
    }

    c::putchar('\n' as i32);

    let hello = [_]u8{
        'H' as u8, 'e' as u8, 'l' as u8, 'l' as u8, 'o' as u8, 0
    };

    c::puts(ffi::as_cstr(hello));
}
